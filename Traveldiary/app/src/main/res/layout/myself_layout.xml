<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <!--个人信息框-->
    <LinearLayout
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="40dp"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#0000FF"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/huanxiong" />
        <TextView
            android:layout_marginLeft="50dp"
            android:id="@+id/nickname"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="孤独的小完能"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"/>
    </LinearLayout>

    <!--蓝色横线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#0000FF"/>


    <!--留言树-->
    <Button
        android:id="@+id/treebtn"
        android:background="@drawable/treebtn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:text="留言历史"
        android:textSize="25dp" />
    <Button
        android:id="@+id/notibtn"
        android:background="@drawable/treebtn"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="通知"
        android:textSize="20dp" />
    <Button
        android:id="@+id/favobtn"
        android:background="@drawable/treebtn"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="我的收藏"
        android:textSize="20dp" />
    <Button
        android:id="@+id/quesbtn"
        android:background="@drawable/treebtn"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="问题与反馈"
        android:textSize="20dp" />

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--设置按钮-->
        <Button
            android:id="@+id/settingbtn"
            android:background="@drawable/settingbtn"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="设置"
            android:textSize="20dp" />

        <!--注销按钮-->
        <Button
            android:id="@+id/downbtn"
            android:layout_marginTop="12dp"
            android:background="@drawable/downbtn"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:text="注销登录"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>